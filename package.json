{
	"name": "sbg",
	"displayName": "oberon-storybook-generator-react",
	"description": "generate base storybook items for react components with automatic argsTable sorting and categorization for Oberon UI elements",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.96.0"
	},
	"activationEvents": [],
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"webview": {
			"resources": [
				"./out/**"
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "sbgSidebar",
					"title": "Oberon",
					"icon": "./oberon.svg"
				}
			]
		},
		"views": {
			"sbgSidebar": [
				{
					"id": "sbgSideBarView",
					"name": "Storybook generator",
					"type": "webview"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"build-svelte": "rollup --config rollup.config.mjs",
		"watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@tsconfig/svelte": "^5.0.4",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"concurrently": "^9.1.2",
		"eslint": "^9.16.0",
		"rollup": "^4.32.1",
		"rollup-plugin-css-only": "^4.5.2",
		"rollup-plugin-livereload": "^2.0.5",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-svelte": "^7.2.2",
		"svelte": "^5.19.4",
		"svelte-check": "^4.1.4",
		"svelte-preprocess": "^6.0.3",
		"ts-loader": "^9.5.1",
		"typescript": "^5.7.2",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"autoprefixer": "^10.4.20",
		"lucide-svelte": "^0.474.0",
		"react-docgen-typescript": "^2.2.2"
	}
}
